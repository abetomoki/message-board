<br>
<div class="panel panel-danger">
  <div class="panel-heading">
    <h5 class="panel-title">Message Room</h5>
  </div>
    
  <div class="panel-body">
     <h4>メッセージ</h4><hr>
    <% @messages.each do |message| %>
      <span class="label label-danger"><%= message.name %></span> > 
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>


<div class="panel panel-danger">
  <div class="panel-body">
     <%= form_for @message, html: { class: 'form-horizontal'} do |f| %>
       
       <div class="form-group">
          <label class="col-sm-2 control-label">Name : </label>
          <div class="col-sm-10">
            <%= f.text_field :name %>
          </div>
       </div>
       <div class="form-group">
          <label class="col-sm-2 control-label">Message : </label>
          <div class="col-sm-10">
            <%= f.text_area :body %>
          </div>
       </div>

    <div class="panel-footer">
       <div class="form-group">
          <label class="col-sm-2 control-label">Send : </label>
          <div class="col-sm-10">
            <%= f.submit class: "btn btn-sm btn-danger" %>
          </div>
       </div>
    </div>
     <% end %>
  </div>
</div>